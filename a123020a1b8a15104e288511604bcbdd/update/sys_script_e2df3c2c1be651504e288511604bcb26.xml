        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var gr = new GlideRecord("x_hocsa_epp_inventario_epp");
    gr.addQuery("u_slx_estado", 1);
    gr.query();
    while (gr.next()) {
		
		var fechaExpiracion= new GlideDateTime(gr.u_slx_fecha_expiracion);
		fechaExpiracion.addDaysLocalTime(-30); //Se restan 30 dias a la fecha de expiracion
		
		var fechaExp = fechaExpiracion.getDate(); // Se obtiene la porcion de fecha sin hora
		var hoy=new GlideDate();
		
		
		if(fechaExp.compareTo(hoy)==0)
			{
				//se ejecuta el evento que gatilla una notificacion al gestor de inventario
				gs.eventQueue('x_hocsa_epp.fecha_expiracion',gr, gr.name);
			}
		

    }


})(current, previous);]]></script>
