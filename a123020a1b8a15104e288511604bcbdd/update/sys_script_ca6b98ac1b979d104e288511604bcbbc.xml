        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	//En caso de que no se haya cambiado el epp
	if(!current.u_slx_epp.changes()){
	var suma=0;
	var eppAnterior = previous.u_slx_epp;
    var eppNuevo = current.u_slx_epp;
	
	//GlideREcord al inventario
    var gr = new GlideRecord('x_hocsa_epp_inventario_epp');
    gr.addQuery("sys_id", eppAnterior);
    gr.query();
    if (gr.next()) {
		//Se le suma al inventario la anterior cantidad
		suma=gr.u_slx_cantidad += previous.u_slx_cantidad;
		//Se actualiza la cantidad del inventario con lo nuevo solicitado
        gr.u_slx_cantidad = suma-current.u_slx_cantidad;
        gr.update();
   
	}
	}
})(current, previous);]]></script>
