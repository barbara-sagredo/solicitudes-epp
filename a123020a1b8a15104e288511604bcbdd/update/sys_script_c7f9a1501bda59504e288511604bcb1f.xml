        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var gr = new GlideRecord("x_hocsa_epp_aprobacion_epp");
    gr.addQuery("u_slx_solicitud_epp", current.sys_id);
    gr.query();
    while (gr.next()) {
        gr.u_slx_estado_epp = 2; //Enviado a Aprobación
        gr.update();
		//GlideRecord a inventario
        var epp = new GlideRecord("x_hocsa_epp_inventario_epp");
        epp.addQuery("sys_id", gr.u_slx_epp);
        epp.query();
        if (epp.next()) {
            epp.u_slx_cantidad -= gr.u_slx_cantidad; //se disminuye el inventario por lo solicitado
            epp.update();

        }

    }

})(current, previous);]]></script>
