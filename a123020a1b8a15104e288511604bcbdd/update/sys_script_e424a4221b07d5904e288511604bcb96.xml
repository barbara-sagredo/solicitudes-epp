        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {
	//Se obtienen los EPP nuevo y previo
    var eppAnterior = previous.u_slx_epp;
    var eppNuevo = current.u_slx_epp;
	//GlideRecord al inventario
    var grAnterior = new GlideRecord('x_hocsa_epp_inventario_epp');
    grAnterior.addQuery("sys_id", eppAnterior);
    grAnterior.query();
    if (grAnterior.next()) {
        grAnterior.u_slx_cantidad += previous.u_slx_cantidad;//Se le suma la cantidad previamente solicitada
        grAnterior.update();
    }
	//GlideRecord al inventario del nuevo epp solicitado
    var epp = new GlideRecord("x_hocsa_epp_inventario_epp");
    epp.addQuery("sys_id", eppNuevo);
    epp.query();
    while (epp.next()) {
        epp.u_slx_cantidad -= current.u_slx_cantidad; //Se reduce la cantidad del inventario
        epp.update();
    }

})(current, previous);]]></script>
